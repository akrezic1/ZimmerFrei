<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/home"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_marginTop="@dimen/logo_top_margin"
        android:src="@drawable/logo_full"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/frei_grey"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:background="@drawable/button_dark_blue"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_create_acc"
        android:layout_alignLeft="@+id/btn_create_acc"
        android:layout_marginBottom="75dp"
        android:layout_alignRight="@+id/btn_create_acc"
        android:layout_alignEnd="@+id/btn_create_acc" />

    <Button
        android:id="@+id/btn_create_acc"
        android:layout_width="250dp"
        android:textColor="@color/frei_grey"
        android:layout_height="wrap_content"
        android:background="@drawable/button_blue"
        android:text="@string/create_account"
        android:ems="10"
        android:layout_above="@id/btn_login"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
